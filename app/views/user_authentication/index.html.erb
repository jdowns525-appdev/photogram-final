<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
          
        </th>

        <th>
          
        </th>

      </tr>

      <% @list_of_users.each do |user| %>
      <tr>
        <td>
          <%= user.username %>
        </td>

        <td>
          <%= user.private ? "Yes" : "No" %>
        </td>

        <td>
          <form action="/insert_follow_request" method="post">
              <input type="hidden" name="query_recipient_id" value="91">

              <button>
                Follow
              </button>
            </form>
        </td>

        <td>
          <a href="/user_authentication/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
